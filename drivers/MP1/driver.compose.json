              },
              {
                "id": "3",
                "label": { "en": "Switch 3", "nl": "Schakelaar 3" }
              },
              { "id": "4", "label": { "en": "Switch 4", "nl": "Schakelaar 4" } }
            ]
          }
        ]
      },
      {
        "id": "mp1_onoff_off",
        "title": { "en": "Switched off", "nl": "Schakelaar uitgezet" },
        "titleFormatted": {
          "en": "Switch [[switchID]] has been switched off",
          "nl": "Schakelaar [[switchID]] is uitgezet"
